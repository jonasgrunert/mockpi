{
  "name": "mockpi",
  "version": "0.0.6",
  "description": "An OpenAPI mocking tool designed with Jest integrationstest in mind.",
  "main": "dist/index.js",
  "repository": "https://github.com/jonasgrunert/mockpi",
  "author": "jonasgrunert",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "lint": "eslint src/** --fix",
    "test": "jest",
    "prerelease": "yarn lint && yarn test --collectCoverage",
    "release": "standard-version -a",
    "postrelease": "git push --follow-tags && conventional-github-releaser -p angular"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.1",
    "casual": "^1.6.2",
    "fast-xml-parser": "^3.17.4",
    "mitm": "^1.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.13",
    "@types/mitm": "^1.3.3",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "commitizen": "^4.2.1",
    "conventional-github-releaser": "^3.1.5",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "git-authors-cli": "^1.0.28",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageDirectory": "cov",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "avoid"
  }
}
